<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temperature: "
        android:id="@+id/temperatureText"
        android:textSize="35dp"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/temperatureValue"
        android:text="Loading..."
        android:textSize="25dp"
        android:gravity="bottom"
        android:layout_alignTop="@+id/temperatureText"
        android:layout_toEndOf="@+id/temperatureText"
        android:layout_alignBottom="@+id/temperatureText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time Taken: "
        android:textSize="35dp"
        android:id="@+id/timeText"
        android:layout_below="@+id/temperatureText"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timeValue"
        android:text="Loading..."
        android:textSize="25dp"
        android:gravity="bottom"
        android:layout_alignTop="@+id/timeText"
        android:layout_alignBottom="@+id/timeText"
        android:layout_toEndOf="@+id/timeText" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Light: "
        android:textSize="35dp"
        android:id="@+id/lightText"
        android:layout_below="@+id/timeText"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lightValue"
        android:text="Loading..."
        android:textSize="25dp"
        android:gravity="bottom"
        android:layout_alignTop="@+id/lightText"
        android:layout_alignBottom="@+id/lightText"
        android:layout_toEndOf="@+id/lightText" />
</RelativeLayout>
